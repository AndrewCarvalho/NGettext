{
  "version": "0.6.0",
  "title": "NGettext.PluralCompile",
  "description": "Provides support of plural rule compilation to the IL bytecode.",
  "authors": [ "Vitaly Zilnik" ],

  "buildOptions": {
    "languageVersion": "csharp6",
    "warningsAsErrors": true,
    "xmlDoc": true,
    "nowarn": [ "CS1591" ]
  },

  "configurations": {
    "Debug": {
      "buildOptions": {
        "define": [ "DEBUG", "TRACE" ]
      }
    },
    "Release": {
      "buildOptions": {
        "define": [ "RELEASE" ],
        "optimize": true,
        "keyFile": "../../NGettext.snk"
      }
    }
  },

  "packOptions": {
    "projectUrl": "https://github.com/neris/NGettext",
    "licenseUrl": "https://raw.githubusercontent.com/neris/NGettext/master/LICENSE",
    "tags": [ "ngettext", "gettext", "internationalization", "localization", "i18n", "l10n", "translate" ],
    "requireLicenseAcceptance": false,
    "repository": {
      "type": "git",
      "url": "git://github.com/neris/NGettext"
    },

    "files": {
      "mappings": {
        "LICENSE": "../../LICENSE"
      }
    }
  },

  "dependencies": {
    "NGettext": { "target": "project" }
  },

  "frameworks": {
    "net20": {
      "frameworkAssemblies": {
        "System": ""
      }
    },
    "net35": {
      "frameworkAssemblies": {
        "System": ""
      }
    },
    "net35-client": {
      "frameworkAssemblies": {
        "System": ""
      }
    },
    "net40": {
      "frameworkAssemblies": {
        "System": ""
      }
    },
    "net40-client": {
      "frameworkAssemblies": {
        "System": ""
      }
    },
    "net45": {
      "frameworkAssemblies": {
        "System": ""
      }
    },
    "net46": {
      "frameworkAssemblies": {
        "System": ""
      }
    },
    "netstandard1.3": {
      "dependencies": {
        "Microsoft.CSharp": "4.0.1-*",
        "System.Runtime": "4.1.0-*",
        "System.Globalization": "4.0.11-*",
        "System.Collections": "4.0.11-*",
        "System.IO": "4.1.0-*",
        "System.Diagnostics.Debug": "4.0.11-*",
        "System.Runtime.Extensions": "4.1.0-*",
        "System.Runtime.InteropServices": "4.1.0-*",
        "System.Diagnostics.TraceSource": "4.0.0-*",
        "System.Reflection.Emit.Lightweight": "4.0.1-*",
        "System.Reflection.TypeExtensions": "4.1.0-*"
      }
    }
  }
}
